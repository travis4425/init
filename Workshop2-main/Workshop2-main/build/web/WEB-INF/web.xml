<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>UpdateCartController</servlet-name>
        <servlet-class>controller.cart.UpdateCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewInvoiceController</servlet-name>
        <servlet-class>controller.invoice.ViewInvoiceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchCartController</servlet-name>
        <servlet-class>controller.cart.SearchCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateCartController</servlet-name>
        <servlet-class>controller.cart.CreateCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteCartController</servlet-name>
        <servlet-class>controller.cart.DeleteCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateInvoiceController</servlet-name>
        <servlet-class>controller.invoice.CreateInvoiceController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateCartController</servlet-name>
        <url-pattern>/UpdateCartController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewInvoiceController</servlet-name>
        <url-pattern>/ViewInvoiceController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchCartController</servlet-name>
        <url-pattern>/SearchCartController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateCartController</servlet-name>
        <url-pattern>/CreateCartController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteCartController</servlet-name>
        <url-pattern>/DeleteCartController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateInvoiceController</servlet-name>
        <url-pattern>/CreateInvoiceController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
